---
import { Phone, Calendar, Mail, MapPin } from "lucide-react";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={"El mejor restaurante de Cumana"} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <title>{"El Navegante"}</title>
  </head>
  <body>
    <slot />
    <footer class="bg-gray-900 text-white py-12 w-full px-4 md:px-6">
      <div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-lg font-semibold mb-4">El Navegante</h3>
          <p class="text-gray-400">
            Experiencia culinaria única con los mejores sabores del mar y la
            tierra.
          </p>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4">Contacto</h3>
          <ul class="space-y-2 text-gray-400">
            <li class="flex items-center">
              <MapPin className="h-5 w-5 mr-2 text-blue-400" />
              123 Calle del Mar, Ciudad Costera
            </li>
            <li class="flex items-center">
              <Phone className="h-5 w-5 mr-2 text-blue-400" />
              +1 234 567 890
            </li>
            <li class="flex items-center">
              <Mail className="h-5 w-5 mr-2 text-blue-400" />
              info@elnavegante.com
            </li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold mb-4">Enlaces Rápidos</h3>
          <ul class="space-y-2">
            <li>
              <a
                href="/"
                class="text-gray-400 hover:text-blue-400 transition-colors"
                >Inicio</a
              >
            </li>
            <li>
              <a
                href="/menu"
                class="text-gray-400 hover:text-blue-400 transition-colors"
                >Menú</a
              >
            </li>
            <li>
              <a
                href="/pedido"
                class="text-gray-400 hover:text-blue-400 transition-colors"
                >Hacer Pedido</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-blue-400 transition-colors"
                >Términos de Servicio</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-gray-400 hover:text-blue-400 transition-colors"
                >Política de Privacidad</a
              >
            </li>
          </ul>
        </div>
      </div>
      <div
        class="container mx-auto mt-8 pt-8 border-t border-gray-800 text-center text-gray-400"
      >
        <p>&copy; 2023 El Navegante. Todos los derechos reservados.</p>
      </div>
    </footer>
  </body>
</html>
